// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "inline_code_actions": true,
  "auto_signature_help": true,
  "scroll_sensitivity": 3.0,
  "buffer_line_height": "comfortable",
  "ui_font_weight": 500.0,
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_menus": false,
    "show_user_picture": true,
    "show_onboarding_banner": false,
    "show_branch_icon": false
  },
  "terminal": {
    "button": true
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": true
  },
  "hard_tabs": false,
  "toolbar": {
    "code_actions": false,
    "agent_review": false,
    "quick_actions": false,
    "breadcrumbs": false
  },
  "minimap": {
    "show": "never"
  },
  "gutter": {
    "folds": false,
    "breakpoints": true,
    "runnables": true
  },
  "rounded_selection": true,
  "agent_buffer_font_size": 16.0,
  "agent": {
    "dock": "left",
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking"
    }
  },
  "show_edit_predictions": false,

  // "icon_theme": "Colored Zed Icons Theme Light",

  // FEATURES
  "features": {
    "edit_prediction_provider": "none"
  },

  // COMPLETIONS
  "snippet_sort_order": "top",

  // KEYMAP & TELEMETRY
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },

  "soft_wrap": "editor_width",

  "vim_mode": false,

  // THEME
  "theme": {
    "mode": "dark",
    "light": "Fleet Light",
    "dark": "Fleet Light"
  },

  // PROJETC PANEL IN RIGHT
  "project_panel": {
    "hide_root": false,
    "starts_open": false,
    "hide_gitignore": true,
    "entry_spacing": "standard",
    "button": true,
    "dock": "left",
    "indent_size": 20.0,
    "auto_fold_dirs": false,
    "git_status": true,
    "show_diagnostics": "all"
  },

  // OUTLINE
  "outline_panel": {
    "dock": "left"
  },

  // SAVES AND RESTORES
  "autosave": "off",
  "restore_on_startup": "last_session",

  // FONT
  "ui_font_family": "SF Pro Text",
  "ui_font_size": 15.0,
  "buffer_font_size": 16.0,
  "buffer_font_weight": 500,
  "buffer_font_family": "CommitMono",
  "buffer_font_fallbacks": ["Segoe UI"],
  // "buffer_line_height": { "custom": 1.7 },

  // LINE HIGHLIGHT
  "current_line_highlight": "gutter",
  "cursor_shape": "bar",

  // scrollbar
  "scrollbar": {
    "show": "always",
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "information",

    "axes": {
      "horizontal": false,
      "vertical": false
    }
  },

  // FILE ICONS
  "tabs": {
    "show_diagnostics": "errors",
    "show_close_button": "hover",
    "close_position": "right",
    "git_status": false,
    "file_icons": true
  },

  // lsp
  "enable_language_server": true,

  // FORMAT ON SAVE
  "format_on_save": "on",
  "formatter": "prettier",

  // GIT
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": null,
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true,
      "min_column": 90
    }
  },

  // INDENT GUIDES
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },

  // HOVER POPOVER
  "hover_popover_enabled": true,
  "relative_line_numbers": "enabled",

  // VIM
  "vim": {
    "use_system_clipboard": "always",
    // "use_multiline_find": true,
    "use_smartcase_find": true,
    // "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 50
  },

  // FORMATING
  "languages": {
    "SQL": {
      "show_edit_predictions": true
    },
    "Go": {
      "formatter": "language_server",
      "enable_language_server": true,
      "extend_comment_on_newline": false,
      "tab_size": 4,
      // "format_on_save": "language_server",
      "language_servers": ["gopls"]
    }
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ]

  // AI
}
