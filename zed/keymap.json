	//     "e": "vim::NextSubwordEnd",
	//     "g e": "vim::PreviousSubwordEnd"
	//   }
	// }
	{
		"context": "Pane",
		"bindings": {
			"alt-p": "pane::TogglePinTab",
		},
	},
	{
		"context": "Workspace",
		"bindings": {
			"alt-e": "diagnostics::Deploy",
		},
